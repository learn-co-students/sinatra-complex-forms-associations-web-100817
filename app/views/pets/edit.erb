<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id %>" method="post">
  <label>Name:
    <input type="text" name="pet[name]" value="<%= @pet.name %>" id="pet_name">
  </label>

  <br><br>

  <label>Choose An Existing Owner:
    <br>
    <% @owners.each do |owner| %>
      <input type="radio" name="pet[owner_id]" value="<%=owner.id %>" id="<%=owner.id %>" <%= 'checked' if @pet.owner == owner %>><%= owner.name %></label>
    <% end %>
  </label>

  <br><br>
    Or Create A New One:
    <br>
  <label>Name:
    <input type="text" name="owner[name]" id="owner_name">
  </label>

  <input type="submit" value="Update Pet">
</form>
